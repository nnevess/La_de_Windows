<Window x:Class="La_de_Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:La_de_Windows"
        mc:Ignorable="d"
        Height="720" Width="1080" 
        MaxHeight="720" MaxWidth="1080" 
        MinHeight="720" MinWidth="1080" 
        WindowStartupLocation="CenterScreen">

    <Grid Background="#eaedf1">
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="267"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1" Background="#FFC3C3C3">
            <Button Content="Agregar Ciudad" Margin="30,538,31,26" Background="#FF006DFF" Click="OpenWindow"/>
        </Border>

        <StackPanel Grid.Row="0" Grid.Column="1">
            <Button x:Name="BtnClose"
                        Cursor="Hand"
                        Style="{StaticResource ButtonCloseStyle}"
                        Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>
